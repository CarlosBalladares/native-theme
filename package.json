{
  "name": "native-theme",
  "version": "1.0.0",
  "description": "Theming utilities for react native and react native web.",
  "repository": "git@github.com:indigo-org/native-theme.git",
  "author": "carlosbf@protonmail.com",
  "license": "MIT",
  "private": false,
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib/",
    "src/"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.1",
    "@react-native-community/bob": "^0.14.2",
    "@react-native-community/eslint-config": "^1.1.0",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^10.3.2",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.0",
    "@types/react-native": "^0.62.11",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-plugin-react-native": "^3.8.1",
    "hoist-non-react-statics": "^3.3.2",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-native": "^0.61.4",
    "react-native-web": "~0.11.7",
    "rimraf": "^3.0.2",
    "typedoc": "^0.17.7",
    "typescript": "~3.8.3"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ],
    "files": [
      "src/"
    ]
  },
  "scripts": {
    "build": "rimraf lib && rimraf docs && bob build && yarn docs",
    "prepare": "bob build",
    "lint": "eslint \"./src/**/**.{ts, tsx}\"",
    "docs": "typedoc --out docs ",
    "format": "prettier --write \"./src/**/**.{ts, tsx}\"",
    "format:check": "prettier --list-different \"./src/**/**.{ts, tsx}\"",
    "test": "jest"
  }
}
